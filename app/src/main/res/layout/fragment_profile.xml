<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back">

        <View
            android:id="@+id/profile_back_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/primary"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toTopOf="@+id/profile_main_gideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/profile_back_header"
            app:layout_constraintStart_toStartOf="@+id/profile_back_header"
            app:layout_constraintTop_toTopOf="@+id/profile_back_header"
            tools:src="@tools:sample/avatars"
            app:profileImage="@{viewmodel.user.avatar_url}"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:id="@+id/profile_back_header_info"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rect_info"
            app:layout_constraintBottom_toBottomOf="@+id/profile_back_header"
            app:layout_constraintEnd_toEndOf="@+id/profile_back_header"
            app:layout_constraintStart_toStartOf="@+id/profile_back_header"
            app:layout_constraintTop_toBottomOf="@+id/profile_back_header" />

        <LinearLayout
            android:id="@+id/profile_follower_li"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/profile_back_header_info"
            app:layout_constraintEnd_toStartOf="@+id/profile_following_li"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/profile_back_header_info"
            app:layout_constraintTop_toTopOf="@+id/profile_back_header_info">

            <TextView
                android:id="@+id/profile_followers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-light"
                android:lineSpacingExtra="8sp"
                android:text="Followers"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="-3dp"
                tools:layout_editor_absoluteY="346dp" />

            <TextView
                android:id="@+id/profile_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@{numberUtils.format(viewmodel.user.followers) }"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/design_default_color_background"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="365dp"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_following_li"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/profile_repository_li"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_follower_li"
            app:layout_constraintTop_toTopOf="@+id/profile_follower_li">

            <TextView
                android:id="@+id/profile_following_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-light"
                android:lineSpacingExtra="8sp"
                android:text="Following"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="346dp" />

            <TextView
                android:id="@+id/profile_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@{numberUtils.format(viewmodel.user.following) }"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/design_default_color_background"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="111dp"
                tools:layout_editor_absoluteY="365dp"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_repository_li"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/profile_star_li"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_following_li"
            app:layout_constraintTop_toTopOf="@+id/profile_following_li">

            <TextView
                android:id="@+id/profile_repository_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-light"
                android:lineSpacingExtra="8sp"
                android:text="Repository"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="177dp"
                tools:layout_editor_absoluteY="346dp" />

            <TextView
                android:id="@+id/profile_repository"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@{numberUtils.format(viewmodel.user.public_repos) }"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/design_default_color_background"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="209dp"
                tools:layout_editor_absoluteY="365dp"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_star_li"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/profile_back_header_info"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_repository_li"
            app:layout_constraintTop_toTopOf="@+id/profile_repository_li">

            <TextView
                android:id="@+id/profile_stars_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-light"
                android:lineSpacingExtra="8sp"
                android:text="Stars"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="283dp"
                tools:layout_editor_absoluteY="346dp" />

            <TextView
                android:id="@+id/profile_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@{numberUtils.format(viewmodel.user.public_gists) }"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/design_default_color_background"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="313dp"
                tools:layout_editor_absoluteY="365dp"
                tools:text="100" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewmodel.user.name}"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/text"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            tools:text="Google" />

        <TextView
            android:id="@+id/profile_user_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@{viewmodel.user.bio}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/text"
            app:layout_constraintBottom_toTopOf="@+id/profile_back_header_info"
            app:layout_constraintEnd_toEndOf="@+id/profile_username"
            app:layout_constraintStart_toStartOf="@+id/profile_username"
            app:layout_constraintTop_toBottomOf="@+id/profile_username"
            tools:text="Google ❤️ Open Source" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profile_main_gideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="com.milad.githoob.utils.numberUtils" />

        <variable
            name="viewmodel"
            type="com.milad.githoob.ui.profile.ProfileViewModel" />

    </data>
</layout>
