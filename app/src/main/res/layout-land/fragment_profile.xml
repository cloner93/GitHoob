<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.milad.githoob.utils.ScrollChildSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:onRefreshListener="@{viewmodel::refresh}"
        app:refreshing="@{viewmodel.dataLoading}">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_header_info"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/profile_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{viewmodel.user.name}"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profile_image"
                    app:layout_constraintTop_toTopOf="@+id/profile_image"
                    tools:text="Milad Targholi" />

                <TextView
                    android:id="@+id/profile_user_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{viewmodel.user.bio}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                    app:layout_constraintEnd_toEndOf="@+id/profile_user_login"
                    app:layout_constraintStart_toStartOf="@+id/profile_user_login"
                    app:layout_constraintTop_toBottomOf="@+id/profile_user_login"
                    tools:text="Google ❤️ Open Source" />

                <TextView
                    android:id="@+id/profile_user_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{viewmodel.user.login}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text"
                    app:layout_constraintBottom_toTopOf="@+id/profile_user_desc"
                    app:layout_constraintEnd_toEndOf="@+id/profile_user_name"
                    app:layout_constraintStart_toStartOf="@+id/profile_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/profile_user_name"
                    tools:text="Cloner93" />

                <TextView
                    android:id="@+id/profile_header_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:text="@{viewmodel.user.company}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_header_company_icon"
                    app:layout_constraintStart_toEndOf="@+id/profile_header_company_icon"
                    app:layout_constraintTop_toTopOf="@+id/profile_header_company_icon"
                    app:layout_constraintVertical_bias="1.0"
                    tools:text="Behsazan Mellat" />

                <TextView
                    android:id="@+id/profile_header_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:text="@{viewmodel.user.location}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_header_location_icon"
                    app:layout_constraintStart_toEndOf="@+id/profile_header_location_icon"
                    app:layout_constraintTop_toTopOf="@+id/profile_header_location_icon"
                    app:layout_constraintVertical_bias="1.0"
                    tools:text="Tehran" />

                <TextView
                    android:id="@+id/profile_header_create_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:text="@{@string/joined(viewmodel.user.created_at.subSequence(0, 10))}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_header_create_at_icon"
                    app:layout_constraintStart_toEndOf="@+id/profile_header_create_at_icon"
                    app:layout_constraintTop_toTopOf="@+id/profile_header_create_at_icon"
                    app:layout_constraintVertical_bias="1.0"
                    tools:text="joined :" />

                <View
                    android:id="@+id/profile_header_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#5EFFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/profile_user_desc"
                    app:layout_constraintStart_toStartOf="@+id/profile_image"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="10dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:profileImage="@{viewmodel.user.avatar_url}"
                    tools:src="@tools:sample/avatars"
                    tools:srcCompat="@tools:sample/avatars" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_header_company_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/profile_header_divider"
                    app:layout_constraintTop_toBottomOf="@+id/profile_header_divider"
                    app:srcCompat="@drawable/ic_company" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_header_location_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/profile_header_company_icon"
                    app:layout_constraintTop_toBottomOf="@+id/profile_header_company_icon"
                    app:srcCompat="@drawable/ic_location" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_header_create_at_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/profile_header_location_icon"
                    app:layout_constraintTop_toBottomOf="@+id/profile_header_location_icon"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_date" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_header_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rect_info"
                android:elevation="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_header_info"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/profile_follower_li"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_header_details"
                    app:layout_constraintEnd_toStartOf="@+id/profile_following_li"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/profile_header_details"
                    app:layout_constraintTop_toTopOf="@+id/profile_header_details">

                    <TextView
                        android:id="@+id/profile_followers_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-light"
                        android:lineSpacingExtra="8sp"
                        android:text="Followers"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        tools:layout_editor_absoluteX="-3dp"
                        tools:layout_editor_absoluteY="346dp" />

                    <TextView
                        android:id="@+id/profile_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@{numberUtils.format(viewmodel.user.followers) }"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="21dp"
                        tools:layout_editor_absoluteY="365dp"
                        tools:text="100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_following_li"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_follower_li"
                    app:layout_constraintEnd_toStartOf="@+id/profile_repository_li"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/profile_follower_li"
                    app:layout_constraintTop_toTopOf="@+id/profile_follower_li">

                    <TextView
                        android:id="@+id/profile_following_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-light"
                        android:lineSpacingExtra="8sp"
                        android:text="Following"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        tools:layout_editor_absoluteX="87dp"
                        tools:layout_editor_absoluteY="346dp" />

                    <TextView
                        android:id="@+id/profile_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@{numberUtils.format(viewmodel.user.following) }"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="111dp"
                        tools:layout_editor_absoluteY="365dp"
                        tools:text="100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_repository_li"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_following_li"
                    app:layout_constraintEnd_toStartOf="@+id/profile_star_li"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/profile_following_li"
                    app:layout_constraintTop_toTopOf="@+id/profile_following_li">

                    <TextView
                        android:id="@+id/profile_repository_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-light"
                        android:lineSpacingExtra="8sp"
                        android:text="Repositories"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        tools:layout_editor_absoluteX="177dp"
                        tools:layout_editor_absoluteY="346dp" />

                    <TextView
                        android:id="@+id/profile_repository"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@{numberUtils.format(viewmodel.user.public_repos) }"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="209dp"
                        tools:layout_editor_absoluteY="365dp"
                        tools:text="100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_star_li"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="9dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_repository_li"
                    app:layout_constraintEnd_toEndOf="@+id/profile_header_details"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/profile_repository_li"
                    app:layout_constraintTop_toTopOf="@+id/profile_repository_li">

                    <TextView
                        android:id="@+id/profile_stars_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-light"
                        android:lineSpacingExtra="8sp"
                        android:text="Stars"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        tools:layout_editor_absoluteX="283dp"
                        tools:layout_editor_absoluteY="346dp" />

                    <TextView
                        android:id="@+id/profile_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@{numberUtils.format(viewmodel.user.public_gists) }"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/design_default_color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="313dp"
                        tools:layout_editor_absoluteY="365dp"
                        tools:text="100" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_header_tab_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/profile_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_tab_layout" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/profile_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/back"
                    android:elevation="2dp"
                    android:textSize="12sp"
                    android:theme="@style/Theme.GitHoob"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabBackground="@color/back"
                    app:tabIndicator="@color/back"
                    app:tabIndicatorColor="@color/primary_dark"
                    app:tabIndicatorGravity="bottom"
                    app:tabIndicatorHeight="4dp"
                    app:tabSelectedTextColor="@color/primary_dark"
                    app:tabTextAppearance="@style/TextAppearance.AppCompat.Body1"
                    app:tabTextColor="@color/accent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.milad.githoob.utils.ScrollChildSwipeRefreshLayout>

    <data>

        <import type="com.milad.githoob.utils.numberUtils" />

        <variable
            name="viewmodel"
            type="com.milad.githoob.ui.profile.ProfileViewModel" />

    </data>
</layout>
