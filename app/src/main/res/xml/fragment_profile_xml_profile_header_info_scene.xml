<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/profile_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/bgToolbar"
            app:layout_constraintStart_toStartOf="@id/bgToolbar"
            app:layout_constraintTop_toTopOf="@id/bgToolbar" />
        <Constraint
            android:id="@+id/bgToolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/profile_user_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintStart_toEndOf="@+id/profile_image1"
            app:layout_constraintTop_toTopOf="@+id/profile_image1" />
        <Constraint
            android:id="@+id/profile_user_login1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image1"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintStart_toStartOf="@+id/profile_user_name1"
            app:layout_constraintTop_toBottomOf="@+id/profile_user_name1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/profile_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/bgToolbar"
            app:layout_constraintStart_toStartOf="@id/bgToolbar"
            app:layout_constraintTop_toTopOf="@id/bgToolbar" />
        <Constraint
            android:id="@+id/bgToolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Constraint
            android:id="@+id/profile_user_login1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image1"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintStart_toStartOf="@+id/profile_user_name1"
            app:layout_constraintTop_toBottomOf="@+id/profile_user_name1" />
        <Constraint
            android:id="@+id/profile_user_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintStart_toEndOf="@+id/profile_image1"
            app:layout_constraintTop_toTopOf="@+id/profile_image1" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/profile_image1" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@id/profile_image1" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@id/profile_image1" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/profile_image1" />
            <!--            1-->
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/profile_user_login1" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@id/profile_user_login1" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@id/profile_user_login1" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/profile_user_login1" />
            <!--            2-->
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/profile_user_name1" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@id/profile_user_name1" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@id/profile_user_name1" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/profile_user_name1" />
            <!--            ================-->
            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@id/profile_image" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/profile_image" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/profile_image" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="100"
                app:motionTarget="@id/profile_image" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@id/profile_user_name" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/profile_user_name" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/profile_user_name" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="100"
                app:motionTarget="@id/profile_user_name" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@id/profile_user_login" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/profile_user_login" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/profile_user_login" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="100"
                app:motionTarget="@id/profile_user_login" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@id/lim" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/lim" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/lim" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="100"
                app:motionTarget="@id/lim" />


        </KeyFrameSet>
    </Transition>
</MotionScene>
