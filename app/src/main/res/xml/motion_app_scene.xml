<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bgToolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--            <CustomAttribute-->
            <!--                app:attributeName="backgroundColor"-->
            <!--                app:customColorValue="@android:color/white" />-->
        </Constraint>
        <Constraint
            android:id="@+id/collapsedTitle"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/bgToolbar"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/bgToolbar"
            app:layout_constraintVertical_bias="1.0" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bgToolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!--            <CustomAttribute-->
            <!--                app:attributeName="backgroundColor"-->
            <!--                app:customColorValue="@color/light_gray" />-->
        </Constraint>
        <Constraint
            android:id="@+id/collapsedTitle"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/bgToolbar"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/bgToolbar"
            app:layout_constraintVertical_bias="1.0" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/collapsedTitle" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@id/collapsedTitle" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@id/collapsedTitle" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/collapsedTitle" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="100"
                app:motionTarget="@+id/expandedTitle" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@+id/expandedTitle" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="20"
                app:motionTarget="@+id/expandedTitle" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@+id/expandedTitle" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
